<h1>Listing unos</h1>

<table>
  <thead>
    <tr>
      <th>Num</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @unos.each do |uno| %>
      <tr>
        <td><%= uno.num %></td>
        <td><%= link_to 'Show', uno %></td>
        <td><%= link_to 'Edit', edit_uno_path(uno) %></td>
        <td><%= link_to 'Destroy', uno, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Uno', new_uno_path %>
